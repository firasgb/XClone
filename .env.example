# Copy this file to `.env` and fill the real values. Do NOT commit your `.env` file.

# Server
# Port for the backend server (default server uses 5000)
PORT=5000

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/x_clone_db

# Cloudinary credentials (only required if you use image upload)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT / Private key used to sign tokens
PRIVATE_KEY=your_jwt_private_key

# Node environment (development/production)
NODE_ENV=development

# Client (optional)
# If you want the client to use a direct API base URL instead of the Vite proxy,
# add a Vite env var (must start with VITE_ to be exposed to client code):
# VITE_API_BASE_URL=http://localhost:5000/api
